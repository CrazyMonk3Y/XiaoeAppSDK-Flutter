<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/xe_sdk_title_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/xe_sdk_back_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            tools:src="@mipmap/xe_sdk_back_icon"/>

        <ImageView
            android:id="@+id/xe_sdk_close_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/xe_sdk_back_img"
            android:layout_centerVertical="true"
            android:padding="10dp"
            tools:src="@mipmap/xe_sdk_close_icon"/>

        <TextView
            android:id="@+id/xe_sdk_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/color_white"
            android:textSize="18sp"
            android:text="XESDK"/>

        <ImageView
            android:id="@+id/xe_sdk_share_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            tools:src="@mipmap/xe_sdk_share_icon"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/web_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>